<section class="section">
    <div class="container">
        <h1 class="title">Lista de usuarios</h1>

        <div class="columns is-multiline">
            <% usuarios.forEach(u => { %>
                <div class="column is-one-quarter">
                    <div class="box has-text-centered">
                        <img style="width: 150px; height: 150px; object-fit: cover; border-radius: 50%;"
                            src="<%= u.foto %>" 
                            alt="<%= u.nombre %>">
                        <p class="subtitle">
                            <strong>
                                <%= u.nombre %>
                            </strong>
                        </p>
                        <a href="/usuarios/<%= u.id %>"
                            class="button is-link is-fullwidth">Ver perfil</a>
                        <a href="/usuarios/<%= u.id %>"
                            class="button is-warning is-small ml-2 mt-2"
                            >Editar</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>