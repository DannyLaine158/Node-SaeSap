<div class="container">
    <h2 class="title">Crear nuevo usuario</h2>

    <form action="/usuario/nuevo" method="post" enctype="multipart/form-data">
        <div class="field">
            <label for="name" class="label">Nombre</label>
            <input type="text" class="input" id="name" name="nombre" >
        </div>

        <div class="field">
            <label for="email" class="label">Correo</label>
            <input type="email" class="input" id="email" name="correo" >
        </div>

        <div class="field">
            <label for="edit_picture">Nueva Foto</label>
            <input type="file" class="input" name="foto">
        </div>

        <button type="submit" class="button is-success mt-3">
            Guardar cambios
        </button>
    </form>
</div>