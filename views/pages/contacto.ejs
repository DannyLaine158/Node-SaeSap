<section class="section">
    <div class="container">
        <h1 class="title">Contáctanos</h1>
        <form>
            <div class="field">
                <label for="name" class="label">Nombre</label>
                <div class="control">
                    <input type="text" name="name" id="name" 
                        class="input" placeholder="Tu nombre" 
                        required autofocus>
                </div>
            </div>

            <div class="field">
                <label for="email" class="label">Correo Electrónico</label>
                <div class="control">
                    <input type="email" name="email" id="email" 
                        class="input" placeholder="example@mail.com" required>
                </div>
            </div>

            <div class="field">
                <label for="message" class="label">Mensaje</label>
                <div class="control">
                    <textarea class="textarea" name="message" 
                        id="message" placeholder="Escribe tu mensaje..."></textarea>
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <button class="button is-link" type="submit">
                        Enviar Mensaje
                    </button>
                </div>
            </div>
        </form>
    </div>
</section>